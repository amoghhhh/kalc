<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:text="@string/_0"
        android:textSize="40pt"
        android:gravity="right|center"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="208dp"
        tools:ignore="RtlHardcoded" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/buac"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textSize="30dp"
                android:onClick="butac"
                    android:layout_marginRight="2pt"
                    android:text="AC"
                    android:textColor="#FF03DAC5"/>
            <Button
                android:id="@+id/bup"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="2pt"
                android:onClick="buteve"
                android:text="+"
                android:textSize="30dp"
                android:textColor="#FF03DAC5"/>
            <Button
                android:id="@+id/bud"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="2pt"
                android:onClick="buteve"
                android:textSize="30dp"
                android:text="/"
                android:textColor="#FF03DAC5"/>
            <Button
                android:id="@+id/bum"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="buteve"
                android:text="*"
                android:textSize="30dp"
                android:textColor="#FF03DAC5"/>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:onClick="butadd"
                android:textSize="30dp"
                android:text="7"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="butadd"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:text="8"
                android:textSize="30dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="butadd"
                android:layout_marginTop="1pt"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:text="9"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bumodulo"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginTop="1pt"
                android:backgroundTint="@color/gray"
                android:text="%"
                android:onClick="percentage"
                android:textSize="30dp"
                android:textColor="#FF03DAC5"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="butadd"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:textSize="30dp"
                android:text="4"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="2pt"
                android:onClick="butadd"
                android:layout_marginTop="1pt"
                android:text="5"
                android:textSize="30dp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="1pt"
                android:onClick="butadd"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:text="6"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/buminus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginTop="1pt"
                android:backgroundTint="@color/gray"
                android:onClick="buteve"
                android:text="-"
                android:textSize="30dp"
                android:textColor="#FF03DAC5"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:onClick="butadd"
                android:textSize="30dp"
                android:text="1"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:onClick="butadd"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="1pt"
                android:onClick="butadd"
                android:textSize="30dp"
                android:layout_marginRight="2pt"
                android:text="3"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/budot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginTop="1pt"
                android:backgroundTint="@color/gray"
                android:onClick="butadd"
                android:text="."
                android:textSize="30dp"
                android:textColor="#FF03DAC5"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/bu0"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="1pt"
                android:textSize="30dp"
                android:onClick="butadd"
                android:layout_marginRight="2pt"
                android:text="0"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/bupm"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:onClick="butadd"
                android:textSize="30dp"
                android:text="+/-"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/pow"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:backgroundTint="@color/gray"
                android:onClick="buteve"
                android:text="x*"
                android:textSize="30dp"
                android:textColor="#FF03DAC5"/>
            <Button
                android:id="@+id/buequals"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:backgroundTint="#FF03DAC5"
                android:layout_marginRight="2pt"
                android:layout_marginTop="1pt"
                android:textSize="30dp"
                android:onClick="equal"
                android:text="="
                android:textColor="@color/black"/>

        </TableRow>
    </TableLayout>

</LinearLayout>